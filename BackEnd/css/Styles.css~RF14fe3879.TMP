/*
    Master Page Styles below
*/

header {
    position:fixed;
    left:0; top:0px; bottom: 0;
    width: 5%;
    background-color: #233237;
}
header figure img {
    display: block;
    margin: auto;
    margin-top: 50%;
    transform: translateY(20%);
}
header img {
    width: 50px;
}
header ul {
    margin-top: 50px;
    border-top: 1px solid #fff;
}
header li {
    width: 100%;
    height: 50px;
    text-align: center;
    list-style-type: none;
}
header li img {
    display: block;
    margin: auto;
    margin-top: 50%;
    transform: translateY(-50%);
}
header li img:hover {
    opacity: 0.6;
}
body {
    background-color: grey;
}

main {
    
    position: absolute;
    left:5%; top:0px; right:0; bottom:0;
    background-color: #2c3e50;
    height: 1000px;
}
#logo {
    width: 80%;
    height: 70px;
    margin: 10%;
}
.content-area {
    width: 90%;
    display: block;
    margin: auto;
    height: 900px;
    margin-top: 20px;
}
.page-title {
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: space-around;
    line-height: 5em;
    border-bottom: #8e44ad;
}
.page-title h4 {
    font-weight: 100;
}
.quickview-area {
    width: 100%;
    margin-top: 50px;
    height: 700px;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
}
.quickview-area article {
    width: 49%;
    height: 350px;
}
.quickview-area article h4 {
    line-height: 4em;
    text-align: center;
    font-weight:100;
}
.quickview-area article table {
    width: 100%;
    height: 250px;

    border-radius: 5px;
    display: flex;
    justify-content: space-around;
    margin: auto;
    border-collapse: collapse;
    overflow:auto;
}
.quickview-area article table th {
    height: 30px;
    font-weight: 100;
}
.quickview-area article table td {
    width: 100px;
    text-align: center;
    border: 1px solid #dedede;

}