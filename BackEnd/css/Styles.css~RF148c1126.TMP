/* Google fonts import of font family - Nunito*/
@import url('https://fonts.googleapis.com/css?family=Nunito');

/* Browsers reset */
* {
    padding: 0;
    margin: 0;
    font-family: 'Nunito', sans-serif;
    color: #fff;
}

